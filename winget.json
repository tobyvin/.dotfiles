{
    "$schema": "https://aka.ms/winget-settings.schema.json",
    "source": {
        "autoUpdateIntervalInMinutes": 5
    },
    "visual": {
        "progressBar": "accent"
    },
    "installBehavior": {
        "preferences": {
            "scope": "user",
            "locale": [
                "en-US"
            ]
        }
    },
    "network": {
        "downloader": "do",
        "doProgressTimeoutInSeconds": 60
    },
    "telemetry": {
        "disable": true
    },
    "experimentalFeatures": {
        "experimentalMSStore": true,
        "packagedAPI": true
    }
}