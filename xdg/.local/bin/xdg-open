#!/bin/sh
# shellcheck disable=3028
match="file://${HOSTNAME:-${HOST:-$(uname -n)}}/"
replace=file://localhost/

for arg; do
	case $arg in $match*) arg=$replace"${arg#"$match"}" ;; esac
	shift
	set -- "$@" "$arg"
done

if command -v handlr >/dev/null; then
	exec handlr open "$@"
else
	exec command -p xdg-open "$@"
fi
