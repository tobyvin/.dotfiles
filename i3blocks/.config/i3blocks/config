[i3blocks]
command=$SCRIPT_DIR/i3blocks-title
max_length=30
interval=persist

[weather]
command=$SCRIPT_DIR/i3blocks-wttr
interval=600

[miniflux]
command=$SCRIPT_DIR/i3blocks-miniflux
interval=30

[notmuch]
command=$SCRIPT_DIR/i3blocks-notmuch
interval=5

[disk]
command=$SCRIPT_DIR/i3blocks-disk
interval=20

[memory]
command=$SCRIPT_DIR/i3blocks-memory
interval=5

[cpu]
command=$SCRIPT_DIR/i3blocks-cpu
interval=5
format=json

[gpu]
command=$SCRIPT_DIR/i3blocks-gpu
interval=5

[net]
command=$SCRIPT_DIR/i3blocks-net
interval=5

[mpris_icon]
command=i3blocks-mpris icon
interval=persist
format=json

[mpris_title]
command=i3blocks-mpris title
interval=persist
format=json

[mpris_prev]
command=i3blocks-mpris prev
interval=persist
format=json

[mpris_play]
command=i3blocks-mpris play
interval=persist
format=json

[mpris_next]
