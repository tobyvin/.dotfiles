separator_block_width=15
markup=pango

[i3blocks-title]
# command=~/.local/bin/i3blocks-title
max_length=30
interval=persist

[weather]
command=curl wttr.in/?m\&format="%c+%t\n" | sed 's/\s\++\(.*\)C/ \1/'
interval=600

[time]
command=date +"%a %d/%m %T"
interval=1

[dunst]
command=~/.local/bin/i3blocks-dunst
interval=1
