interval=5

[i3blocks-title]
command=$SCRIPT_DIR/i3blocks-title
max_length=30
interval=persist

[weather]
command=curl -s wttr.in/?m\&format="%c+%t\n" | sed 's/\s\++\(.*\)C/ \1/'
interval=600

[miniflux]
command=$SCRIPT_DIR/i3blocks-miniflux
interval=30

[notmuch]
command=$SCRIPT_DIR/i3blocks-notmuch

[disk]
command=$SCRIPT_DIR/i3blocks-disk
interval=20

[memory]
command=$SCRIPT_DIR/i3blocks-memory

[cpu]
command=$SCRIPT_DIR/i3blocks-cpu

[gpu]
command=$SCRIPT_DIR/i3blocks-gpu

[net]
command=$SCRIPT_DIR/i3blocks-net

[volume]
command=$SCRIPT_DIR/i3blocks-mpris
interval=persist
format=json

[volume]
