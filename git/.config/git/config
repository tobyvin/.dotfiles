[sendemail]
	from = Toby Vincent <tobyv@tobyvin.dev>

[commit]
	gpgsign = true

[init]
	defaultBranch = main

[revert]
	reference = true

[rerere]
	enabled = true

[diff]
	colorMoved = default
	colorMovedWS = allow-indentation-change
	tool = difft

[difftool]
	prompt = false

[difftool "difft"]
	cmd = difft "$LOCAL" "$REMOTE"

[pager]
	difftool = true

[merge]
	tool = nvimdiff

[trailer]
	separators = ":#"

[trailer "fix"]
	key = "Fix #"

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[alias]
	lg = log --oneline --all --graph
	st = status
