Host siue
    User tovince
    HostName home.cs.siue.edu
    ForwardAgent yes
    StreamLocalBindUnlink yes
    RemoteForward /run/user/1400158178/gnupg/S.gpg-agent /home/tobyv/.gnupg/S.gpg-agent.extra
    RemoteCommand rm -f /run/user/1400158178/gnupg/S.gpg-agent && zsh -l
    RequestTTY force

